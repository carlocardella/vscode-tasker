{
  "name": "vscode-taskexplorer",
  "displayName": "Task Explorer",
  "description": "Show and run VS Code tasks in the sidebar.",
  "version": "0.0.1",
  "publisher": "carlocardella",
  "preview": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/carlocardella/vscode-taskexplorer"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onView:taskExplorerView",
    "onCommand:taskExplorer.refresh",
    "onCommand:taskExplorer.openTask"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "taskExplorer",
          "title": "Task Explorer",
          "icon": "media/task.svg"
        }
      ]
    },
    "views": {
      "taskExplorer": [
        {
          "id": "taskExplorerView",
          "name": "Tasks",
          "icon": "media/task.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "taskExplorer.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "taskExplorer.runTask",
        "title": "Run Task",
        "icon": "$(run)"
      },
      {
        "command": "taskExplorer.stopTask",
        "title": "Stop Task",
        "icon": "$(stop)"
      },
      {
        "command": "taskExplorer.editTask",
        "title": "Edit Task",
        "icon": "$(edit)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "taskExplorer.refresh",
          "when": "view == taskExplorerView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "taskExplorer.runTask",
          "when": "view == taskExplorerView && viewItem == taskExplorer.task",
          "group": "inline@1"
        },
        {
          "command": "taskExplorer.stopTask",
          "when": "view == taskExplorerView && viewItem == taskExplorer.task.running",
          "group": "inline@1"
        },
        {
          "command": "taskExplorer.editTask",
          "when": "view == taskExplorerView && viewItem =~ /taskExplorer\\.task/",
          "group": "inline@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --mode production --config webpack.config.js",
    "watch": "webpack --watch --config webpack.config.js",
    "test": "npm run compile && npm run test:compile && node ./out/test/runTest.js",
    "test:compile": "tsc -p ./tsconfig.tests.json",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.5",
    "@types/sinon": "^17.0.2",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.3.8",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "sinon": "^17.0.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "vsce": "^2.15.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
